<body>
    <form id="logInForm" action="#something" class="form-container" method="post">
        <div class="container">
            <div class="login-box">
                <legend>logIn</legend>

                <label for="username">Username</label><span class="required">*</span>
                <input type="text" placeholder="Enter Username" name="username" required />

                <label for="psw">Password</label> <span class="required">*</span>
                <input type="password" pattern=".{8,}" required title="8 characters minimum" placeholder="Enter Password" />
